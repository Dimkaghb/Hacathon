# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/videogen

# Redis
REDIS_URL=redis://localhost:6379/0

# Google Cloud
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GEMINI_API_KEY=your-gemini-api-key
GCS_BUCKET=your-video-bucket

# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=face_embeddings

# Auth
JWT_SECRET=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# App
DEBUG=true
# CORS_ORIGINS can be JSON array or comma-separated values
# Use "*" to allow all origins (not recommended for production)
# Example: ["http://localhost:3000","https://your-app.vercel.app"]
CORS_ORIGINS=["http://localhost:3000","*"]

# Veo Configuration
VEO_MODEL=veo-3.1-generate-preview
VEO_FAST_MODEL=veo-3.1-fast-generate-preview
VEO_DEFAULT_RESOLUTION=1080p
VEO_DEFAULT_DURATION=8
VEO_DEFAULT_ASPECT_RATIO=16:9
VEO_POLL_INTERVAL=10
VEO_MAX_POLL_TIME=360
