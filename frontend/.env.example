# Frontend Environment Variables
# Copy this file to .env.local and fill in the values

# API URL - Backend server endpoint
# For local development: http://localhost:8000
# For production/ngrok: https://your-domain.ngrok-free.dev
NEXT_PUBLIC_API_URL=http://localhost:8000

# WebSocket URL - Backend WebSocket endpoint
# For local development: ws://localhost:8000
# For production/ngrok: wss://your-domain.ngrok-free.dev
# IMPORTANT: Use wss:// (not ws://) when your frontend is served over HTTPS
NEXT_PUBLIC_WS_URL=ws://localhost:8000
